source :rubygems

# Project requirements
gem 'rack'
gem 'rake'
gem 'nokogiri'
gem 'sqlite3'

# Component requirements
gem 'rails'
gem 'mysql2'
gem 'sass'
gem 'haml'

group :development, :test do
  gem 'rspec-rails'
  gem 'jasmine'
end


# Test requirements
group :test do
  gem 'mongrel'
  gem 'ruby-debug'
  gem "capybara"

  gem "selenium-webdriver"
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'rcov'
  gem "faker"
end

source :rubygems

# Project requirements
gem 'rack'
gem 'rake'
gem 'nokogiri'
gem 'pg'
gem 'thin'

# Component requirements
gem 'rails'
gem 'sass'
gem 'haml'

group :development, :test do
  gem 'rspec-rails'
  gem 'jasmine'
end


# Test requirements
group :test do
  gem 'ruby-debug19'
  gem "capybara"

  gem "selenium-webdriver"
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'simplecov'
  gem "faker"
end
